    //extract a specific directory to /usr/local/freeswitch
    if (file_exists('/root/backup/'.$filename)) {
      //echo "The file $filename exists";

	  //Recommended
		system('cd /usr/local; tar xvpfz /root/backup/'.$filename.' freeswitch/db/');
