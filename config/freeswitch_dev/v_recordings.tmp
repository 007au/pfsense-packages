if ($_GET['a'] == "download") {

	session_cache_limiter('public');
	
  if ($_GET['type'] = "rec") {
    if  (file_exists($v_recordings_dir.'/'.$_GET['filename'])) {
      	$fd = fopen($v_recordings_dir.'/'.$_GET['filename'], "rb");
      	if ($_GET['t'] == "bin") {
            header("Content-Type: application/force-download");
            header("Content-Type: application/octet-stream");
            header("Content-Type: application/download");
            header("Content-Description: File Transfer");
            header('Content-Disposition: attachment; filename="'.$_GET['filename'].'"');
      	}
        else {
      	    $file_ext = substr($_GET['filename'], -3);
      	    if ($file_ext == "wav") {
              header("Content-Type: audio/x-wav");
            }
      	    if ($file_ext == "mp3") {
              header("Content-Type: audio/mp3");
            }
        }
        header("Cache-Control: no-cache, must-revalidate"); // HTTP/1.1
        header("Expires: Sat, 26 Jul 1997 05:00:00 GMT"); // Date in the past	
        header("Content-Length: " . filesize($v_recordings_dir.'/'.$_GET['filename']));
        fpassthru($fd);
    }
  }

  if ($_GET['type'] = "moh") {
    if  (file_exists($dir_music_on_hold_8000.$_GET['filename'])) {
      	$fd = fopen($dir_music_on_hold_8000.$_GET['filename'], "rb");
      	if ($_GET['t'] == "bin") {
            header("Content-Type: application/force-download");
            header("Content-Type: application/octet-stream");
            header("Content-Type: application/download");
            header("Content-Description: File Transfer");
            header('Content-Disposition: attachment; filename="'.$_GET['filename'].'"');
      	}
        else {
      	    $file_ext = substr($_GET['filename'], -3);
      	    if ($file_ext == "wav") {
              header("Content-Type: audio/x-wav");
            }
      	    if ($file_ext == "mp3") {
              header("Content-Type: audio/mp3");
            }
        }
        header("Cache-Control: no-cache, must-revalidate"); // HTTP/1.1
        header("Expires: Sat, 26 Jul 1997 05:00:00 GMT"); // Date in the past	
        header("Content-Length: " . filesize($dir_music_on_hold_8000.$_GET['filename']));
        fpassthru($fd);
    }
  }

  exit;
}
