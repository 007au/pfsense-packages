	<version>0.5.2_1-p3</version>
	<savetext>Save</savetext>
	<include_file>/usr/local/pkg/lcdproc.inc</include_file>
	<tabs>
		<tab>
			<text>Server</text>
			<url>/pkg_edit.php?xml=lcdproc.xml&amp;id=0</url>
		</tab>
		<tab>
			<text>Screens</text>
			<url>/pkg_edit.php?xml=lcdproc_screens.xml&amp;id=0</url>
