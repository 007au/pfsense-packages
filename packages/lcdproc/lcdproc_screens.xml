	<custom_php_validation_command>
		validate_form_lcdproc_screens($_POST, &amp;$input_errors);
	</custom_php_validation_command>
	<custom_php_resync_config_command>
		sync_package_lcdproc_screens();
	</custom_php_resync_config_command>
</packagegui>
