<?xml version="1.0" encoding="utf-8" ?>
<packagegui>
	<title>Services: Snort</title>
	<name>Snort</name>
	<version>3.0</version>
	<menu>
		<name>Snort Settings</name>
		<tooltiptext>Setup snort specific settings</tooltiptext>
		<section>Services</section>
		<url>/pkg_edit.php?xml=snort.xml&amp;id=0</url>
	</menu>
	<additional_files_needed>
		<prefix>/usr/local/bin/</prefix>
		<chmod>077</chmod>
		<item>http://www.pfsense.com/packages/config/snort/bin/snort2c</item>
	</additional_files_needed>
	<service>
		<name>snort</name>
		<rcfile>snort.sh</rcfile>
		<executable>snort</executable>
	</service>
	<include_file>/usr/local/pkg/snort.xml</include_file>
	<tabs>
		<tab>
			<text>Snort Settings</text>
			<url>/pkg_edit.php?xml=snort.xml&amp;id=0</url>
			<active/>
		</tab>
	</tabs>
	<fields>
		<field>
			<fielddescr>Interface</fielddescr>
			<fieldname>interface_array</fieldname>
			<value>lan</value>
			<multiple>true</multiple>
			<size>3</size>
			<type>interfaces_selection</type>
		</field>
		<field>
			<fielddescr>Oinkmaster code</fielddescr>
			<fieldname>oinkmastercode</fieldname>
			<value></value>
			<type>input</type>
		</field>
    </fields>
	<service>
		<name>snort</name>
		<rcfile>snort.sh</rcfile>
		<executable>snort</executable>
	</service>
	<custom_add_php_command>
        	sync_package_snort();
	</custom_add_php_command>
	<custom_php_resync_command>
		sync_package_snort();
	</custom_php_resync_command>
</packagegui>
