            unlink('/usr/local/freeswitch/recordings/'.$a_recordings[$_GET['id']]['filename']);
            unset($a_recordings[$_GET['id']]);
            write_config();
            header("Location: freeswitch_recordings.php");
            exit;
        }
    }
}

